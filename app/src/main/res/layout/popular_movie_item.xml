<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    android:background="@color/md_white_1000"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:id="@+id/view_item_movie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/img_movie"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scaleType="fitXY"
            android:src="@drawable/movie_sample" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#807f8a90"
            android:padding="6dp"
            android:orientation="vertical"
            android:layout_alignBottom="@+id/img_movie">

            <com.example.abdul.popularmovieappstage1.util.CustomTextView
                android:id="@+id/title_movie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Movie Titile"
                android:textColor="@color/md_white_1000"
                android:layout_marginLeft="6dp"
                android:textSize="18dp"
                app:font="RobotoCondensed-Bold.ttf"/>

            <com.example.abdul.popularmovieappstage1.util.CustomTextView
                android:id="@+id/popularity_movie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Movie Titile"
                android:textColor="@color/md_white_1000"
                android:layout_marginLeft="6dp"
                android:textStyle="italic"
                android:textSize="14dp"
                app:font="RobotoCondensed-Regular.ttf"/>

        </LinearLayout>


    </RelativeLayout>


</android.support.v7.widget.CardView>


